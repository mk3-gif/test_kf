<!-- Navigation Bar -->
<nav class="navbar">
    <a href="#" class="logo">MyLogo</a>
    <i class="fa fa-bars menu-icon" onclick="toggleMenu()"></i>
    <ul class="nav-links" id="navLinks">
        <li><a href="#">Home</a></li>
